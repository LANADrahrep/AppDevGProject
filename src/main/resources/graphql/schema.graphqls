type Planet {
    id: ID!
    name: String
    radius: Float
    mass: Float
    moons: [Moon]
}

type Moon {
    id: ID!
    name: String
    radius: Float
    mass: Float
}

type User {
    id: ID!
    username: String!
    role: Role!
    enabled: Boolean!
}

enum Role {
    ADMIN
    STAFF
    STUDENT
}

type Query {
    planets: [Planet]
    moons: [Moon]
    userById(id: ID!): User
}

type Mutation {
    createUser(username: String!, password: String!, role: Role!): User
}